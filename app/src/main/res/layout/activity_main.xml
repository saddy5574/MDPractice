<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <include
            layout="@layout/tool_bar"
            />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:text="Main Activity"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:padding="50dp"
            android:background="@color/textViewBackgroundColor"
            android:textColor="@color/textViewTextColor"/>

        <Button
            android:id="@+id/standAloneToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:onClick="standAloneToolbarAction"
            android:text="@string/stand_alone_toolbar" />

        <Button
            android:id="@+id/ActionBarToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:onClick="ActionBarToolbarAction"
            android:text="@string/action_bar_toolbar" />

        <Button
            android:id="@+id/contextualMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:onClick="contextualMenuAction"
            android:text="@string/contextual_menu" />
    </LinearLayout>
</FrameLayout>